# Add Microsoft SQL Server repository key
curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | tee /etc/apt/trusted.gpg.d/microsoft.asc.gpg > /dev/null

# Add Microsoft SQL Server repository
curl -fsSL https://packages.microsoft.com/config/ubuntu/20.04/prod.list | tee /etc/apt/sources.list.d/mssql-release.list

# Update package lists
apt-get update

# Install SQL Server ODBC driver
ACCEPT_EULA=Y apt-get install -y msodbcsql17
